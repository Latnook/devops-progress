# Security Configuration - Copy to .env and update with actual values
# NEVER commit .env file to version control

# API Keys for service-to-service authentication
API_KEY=change-me-to-a-strong-random-key-min-32-chars

# Grafana Admin Credentials (generate with: openssl rand -base64 32)
GRAFANA_ADMIN_USER=admin
GRAFANA_ADMIN_PASSWORD=change-me-to-a-strong-password

# JWT Configuration (generate with: openssl rand -hex 32)
JWT_SECRET=change-me-to-a-strong-secret-key

# Flask Secret Keys
DASHBOARD_SECRET_KEY=change-me-dashboard-secret
SYSINFO_SECRET_KEY=change-me-sysinfo-secret

# Production/Development Mode
FLASK_ENV=production
NODE_ENV=production

# HTTPS Configuration (set to True when TLS is enabled)
HTTPS_ENABLED=False

# Rate Limiting Configuration
RATE_LIMIT_ENABLED=True
REDIS_URL=redis://redis:6379/0
